#
# wm independent hotkeys
#

#
# Laucher
#

# terminal emulator
super + Return
	st

# st scratchpad
super + grave
    $HOME/scripts/bspwm/scratchpad.sh 

# program launcher
super + space
    rofi -show drun 
    #dmenu_run -fn "Inconsolata:size=25" -nb "#222222" -nf "#bbbbbb" -sb "#0099CC" -sf "#ffffff"

# chromuim launcher
super + c
    google-chrome-stable


#
# state/flags
#

# close window
super + q
	bspc node -c

# rotate
super + r
    bspc node @/ -R 90

super + shift + r
    bspc node @focused:parent/ -R 90

# set the window state 
super + {t,shift + f}
	bspc node -t {\~tiled,\~floating}

super + shift + e
    bspc node @/ -B

super + m
    $HOME/scripts/bspwm/bspfullscreen.sh

super + f
    $HOME/scripts/bspwm/bsphideandfullscreen.sh

# hide polybar
super + p
    $HOME/scripts/bspwm/hidebar.sh


#
# focus/swap
#

# focus the node in the given direction
super + {_,shift} + {j,k,i,l}
	bspc node -{f,s} {west,south,north,east}

# send to current monitor
super + shift + Return
    bspc node -m pointed

# send to next/prev monitor
super + shift + bracket{left,right}
    bspc node -m {prev,next}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last desktop
super + Tab
	bspc desktop -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '{1-9,10}.local'

#
# preselect
#

# preselect the direction
super + ctrl + {j,k,i,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


#
# move/resize
#

super + alt + {j,k,i,l}
	bspc node -z {right -20 0,top 0 20,top 0 -20,right 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


#
# User config
#

# emoji selecter
super + e
    $HOME/scripts/global/emoji-selector.sh

# wallpaper change
super + b
    $HOME/scripts/wp-change.sh

# wallpaper colletion change
super + shift +b
    $HOME/scripts/bspwm/wp-collection.sh


#
# Pc config
#

# volume up
XF86AudioRaiseVolume
    pamixer --allow-boost -i 7

super + shift + period
    pamixer --allow-boost -i 7

# volume down
XF86AudioLowerVolume
    pamixer --allow-boost -d 7

super + shift + comma
    pamixer --allow-boost -d 7

# volume mute
XF86AudioMute
    pamixer -t

super + shift + slash
    pamixer -t

# light up
XF86MonBrightnessUp
    xbacklight -inc 5

super + period
    xbacklight -inc 5

# light down
XF86MonBrightnessDown
    xbacklight -dec 5

super + comma
    xbacklight -dec 5

# screenshot
alt + shift + 4
    flameshot gui
    #sleep 0.4 && scrot -s -e 'mv $f ~/Desktop/' > /dev/null

# picom toggle
super + u
    $HOME/scripts/alpha-toggle.sh

# bspwm window hidden toggle
super + h
    bspc node $(bspc query -N -n .focused) -g hidden=on

super + shift + h
    /home/ring/scripts/bspwm/unhide.sh

# lock screen
super + BackSpace
    slock

# monitor toggle
super + shift + p
    $HOME/scripts/global/all-monitors.sh

# monitor selector
super + shift + M
    $HOME/scripts/global/displayselect.sh

