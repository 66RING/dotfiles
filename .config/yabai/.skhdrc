# terminal emulator
alt - return : /Applications/Alacritty.app/Contents/MacOS/alacritty

# chromuim launcher
alt - c : "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"

# close window
alt - q : yabai -m window --close

alt - r : yabai -m space --rotate 90

# TODO: node parent
# shift + alt - r : yabai -m space next --rotate 90

# alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2
alt - t : yabai -m window --toggle float

# focus window
alt - j : yabai -m window --focus west
alt - l : yabai -m window --focus east
alt - i : yabai -m window --focus north
alt - k : yabai -m window --focus south
alt - 0x30 : yabai -m space --focus recent

# minimize
alt - h : yabai -m window --minimize

# swap managed window
shift + alt - j : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east
shift + alt - i : yabai -m window --swap north
shift + alt - k : yabai -m window --swap south

shift + alt - 0x30 : yabai -m window --swap last




